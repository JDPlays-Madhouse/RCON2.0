{
  "$schema": "https://schema.tauri.app/config/2.1.1",
  "productName": "RCON2.0",
  "version": "0.1.10",
  "identifier": "io.hankin.rcon2",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "RCON2.0",
        "resizable": true,
        "maximized": true,
        "focus": false,
        "width": 1280,
        "height": 960
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "cli": {
      "description": "RCON2.0 is a interface program between games and streaming platforms.",
      "beforeHelp": "",
      "afterHelp": "",
      "args": [],
      "subcommands": {
        "token": {
          "description": "Print valid auth token/s to stdout.",
          "args": [
            {
              "name": "twitch",
              "short": "t",
              "description": "Twitch OAuth Token.",
              "requiredUnlessPresentAny": ["youtube"]
            },
            {
              "name": "youtube",
              "short": "y",
              "description": "YouTube OAuth Token.",
              "requiredUnlessPresentAny": ["twitch"]
            }
          ]
        }
      }
    }
  }
}
